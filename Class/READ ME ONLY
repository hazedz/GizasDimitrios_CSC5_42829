
//System Libraries
#include <iostream>
#include <iomanip>
using namespace std;

//User Libraries

//Global Constants

//Function Prototypes

//Execution Begins Here
int main(int argc, char** argv) {
    unsigned short number;
    cin >> number;
    
    cout << number << endl;
    
    
        unsigned int n1000s = (number  - number%1000) / 1000;
        unsigned int n100s = (number  - number%100) / 100;
        unsigned int n10s = (number  - number%10) / 10;
        number -= (n10s * 10);
        
        unsigned int n1s = (number  - number%1) / 1;
    //Output the Results for 1s
    switch (n1s) {
        case 9 : cout << n1s <<" = *********"; break;
        case 8 : cout << n1s <<" = ********"; break;
        case 7 : cout << n1s <<" = *******"; break;
        case 6 : cout << n1s <<" = ******"; break;
        case 5 : cout << n1s <<" = *****"; break;
        case 4 : cout << n1s <<" = ****"; break;
        case 3 : cout << n1s <<" = ***"; break;
        case 2 : cout << n1s <<" = **"; break;
        case 1 : cout << n1s <<" = *"; break;
       
    }
    cout << endl;

    number -= (n100s * 100);  
    //Output the Results for 10s
    switch (n10s) {
        case 9 : cout << n10s <<" = *********"; break;
        case 8 : cout << n10s <<" = ********"; break;
        case 7 : cout << n10s <<" = *******"; break;
        case 6 : cout << n10s <<" = ******"; break;
        case 5 : cout << n10s <<" = *****"; break;
        case 4 : cout << n10s <<" = ****"; break;
        case 3 : cout << n10s <<" = ***"; break;
        case 2 : cout << n10s <<" = **"; break;
        case 1 : cout << n10s <<" = *"; break;
    }
    cout << endl;

    number -= (n1000s * 1000);    
    //Output the Results for 100s
    switch (n100s) {
        case 9 : cout << n100s <<" = *********"; break;
        case 8 : cout << n100s <<" = ********"; break;
        case 7 : cout << n100s <<" = *******"; break;
        case 6 : cout << n100s <<" = ******"; break;
        case 5 : cout << n100s <<" = *****"; break;
        case 4 : cout << n100s <<" = ****"; break;
        case 3 : cout << n100s <<" = ***"; break;
        case 2 : cout << n100s <<" = **"; break;
        case 1 : cout << n100s <<" = *"; break;
    }
    cout << endl;
    
    //Output the Results for 1000s
    switch (n1000s) {
        case 9 : cout << n1000s <<" = *********"; break;
        case 8 : cout << n1000s <<" = ********"; break;
        case 7 : cout << n1000s <<" = *******"; break;
        case 6 : cout << n1000s <<" = ******"; break;
        case 5 : cout << n1000s <<" = *****"; break;
        case 4 : cout << n1000s <<" = ****"; break;
        case 3 : cout << n1000s <<" = ***"; break;
        case 2 : cout << n1000s <<" = **"; break;
        case 1 : cout << n1000s <<" = *"; break;
    }
    cout << endl;

        return 0;
}
